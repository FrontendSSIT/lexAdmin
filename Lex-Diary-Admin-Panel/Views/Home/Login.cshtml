<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5" style="width:400px;min-width:300px;">
            <div class="card-body p-0">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Login</h1>
                    </div>
                        @using (Html.BeginForm("Login", "Home", null, FormMethod.Post, new { id = "loginForm", @class="user" }))
                        {
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter username...">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-user" id="password" name="password" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Login
                            </button>
                        }
                    <hr>

                </div>

            </div>
        </div>
    </div>



</div>
