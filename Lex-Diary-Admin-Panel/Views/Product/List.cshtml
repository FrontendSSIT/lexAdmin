@model IEnumerable <Lex_Diary_Admin_Panel.Models.Product>
@{
    var productList = Model;
    ViewBag.Title = "List";
}
<link href="~/Content/template-content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
        <!-- Begin Page Content -->

    <!-- Page Heading -->
    @*<h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>*@

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Product Details</th>
                            <th>Price</th>
                            <th>Diacount Percentage</th>
                           
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var product in productList)
                        {
                            <tr>
                                <td><img src="@product.thumbnail"  style="width:100%;height:auto"/></td>
                                <td>@product.productName <br />
                                    <b>Product Description:</b> @product.productDescription<br/><br/>
                                    <b>Rating:</b> @product.rating
                                </td>
                                <td>@product.productPrice</td>
                                <td>@product.discountPercentage</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<!-- /.container-fluid -->

@section Scripts{
          <!-- Page level custom scripts -->
<script src="~/Content/template-content/js/demo/datatables-demo.js"></script>
<!-- Page level plugins -->
<script src="~/Content/template-content/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/template-content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    
    }